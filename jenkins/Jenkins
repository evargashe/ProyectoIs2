pipeline {
    agent any

    tools {nodejs "node"}

    stages{
        stage('sonarqube analisis y dependencias')
        {
            steps{
                nodejs(nodeJSInstallationName: 'nodejs')
                {
                    sh "npm install & npm ci"
                    withSonarQubeEnv('sonar')
                    {
                        sh "npm install sonar-scanner"
                        sh "npm run sonar"
                    }
                }
            }
        }
    }
}